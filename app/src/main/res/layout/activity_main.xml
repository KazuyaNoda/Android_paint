<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <com.example.y3033113.saishu.MyView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.y3033113.saishu.GhostView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.y3033113.saishu.ReshapeView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/mode"
        android:layout_width="250dp"
        android:layout_height="600dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="50dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/text_thick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDDDDD"
            android:text="太さ"
            android:textSize="24sp" />

        <SeekBar
            android:id="@+id/seekBar_thick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:progressTint="#222222"
            android:thumbTint="#222222" />

        <TextView
            android:id="@+id/text_seekBar_thick"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="5"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDDDDD"
            android:text="描画モード"
            android:textSize="24sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="269dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_Line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:text="~"
                    android:textSize="18sp"
                    app:backgroundTint="#222222" />

                <Button
                    android:id="@+id/button_Line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:text="-"
                    android:textSize="18sp"
                    app:backgroundTint="#222222" />

                <Button
                    android:id="@+id/button_eraser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="消しゴム"
                    android:textColor="#000000"
                    app:backgroundTint="#FFFFFF" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_fillOval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:text="●(da)" />

                <Button
                    android:id="@+id/button_Oval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="◯(da)" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_fillRound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:text="●(sin)" />

                <Button
                    android:id="@+id/button_Round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="◯(sin)" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_fillRect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:text="■" />

                <Button
                    android:id="@+id/button_Rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="□" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_clip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:text="領域"
                    app:backgroundTint="#8BC34A" />

                <Button
                    android:id="@+id/button_clipreset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    app:backgroundTint="#8BC34A" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/text_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDDDDD"
            android:text="描画オプション"
            android:textSize="24sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layer"
        android:layout_width="250dp"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="50dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_layerBitmap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="82dp"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/button_layer_up"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="▲"
                        android:textSize="10sp"
                        android:visibility="visible"
                        app:backgroundTint="#969696" />

                    <Button
                        android:id="@+id/button_layer_down"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="▼"
                        android:textSize="10sp"
                        android:visibility="visible"
                        app:backgroundTint="#969696" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_layer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/image_layer2"
                        android:layout_width="105dp"
                        android:layout_height="205dp"
                        android:background="#F8F8F8"
                        android:visibility="visible"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_layer2"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:text="2"
                            android:textSize="36sp"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/button_visible_layer2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            app:backgroundTint="#64C864" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_layer1"
                        android:layout_width="105dp"
                        android:layout_height="205dp"
                        android:layout_weight="1"
                        android:background="#F8F8F8"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_layer1"
                            android:layout_width="wrap_content"
                            android:layout_height="149dp"
                            android:text="1"
                            android:textSize="36sp" />

                        <Button
                            android:id="@+id/button_visible_layer1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            app:backgroundTint="#64C869" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="preview"
                    app:backgroundTint="#FF5722" />

                <EditText
                    android:id="@+id/et_delete_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="delete:"
                    android:inputType="number" />

                <Button
                    android:id="@+id/button_delete_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="delete" />

                <EditText
                    android:id="@+id/et_index_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="exchange:"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/et_index_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="exchange:"
                    android:inputType="number" />

                <Button
                    android:id="@+id/button_exchange_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="exchange"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_currentLayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="current: 1/1"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_add_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="new" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/color"
        android:layout_width="250dp"
        android:layout_height="600dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="50dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:visibility="invisible">


        <com.example.y3033113.saishu.ColorView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="50dp" />

        <SeekBar
            android:id="@+id/seekBar_R"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressTint="#FF1111"
            android:thumbTint="#FF1111" />

        <TextView
            android:id="@+id/textView_R"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="R: 0"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <SeekBar
            android:id="@+id/seekBar_G"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressTint="#11FF11"
            android:thumbTint="#11FF11" />

        <TextView
            android:id="@+id/textView_G"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="G: "
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <SeekBar
            android:id="@+id/seekBar_B"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressTint="#1111FF"
            android:thumbTint="#1111FF" />

        <TextView
            android:id="@+id/textView_B"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="B: 0"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <SeekBar
            android:id="@+id/seekBar_alpha"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressTint="#DDDDDD"
            android:thumbTint="#DDDDDD" />

        <TextView
            android:id="@+id/textView_alpha"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="alpha: 255"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_red"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#FF0000" />

                <Button
                    android:id="@+id/button_green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#00FF00" />

                <Button
                    android:id="@+id/button_blue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#0000FF" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_cyan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#00FFFF" />

                <Button
                    android:id="@+id/button_magenta"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#FF00FF" />

                <Button
                    android:id="@+id/button_yellow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#FFFF00" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_black"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#000000" />

                <Button
                    android:id="@+id/button_white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#FFFFFF" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tool"
        android:layout_width="80dp"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="167dp"
        android:layout_marginLeft="167dp"
        android:layout_marginBottom="-2dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/button_ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ac" />

        <Button
            android:id="@+id/button_reshape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="変形" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="300dp"
        android:background="#EEEEEE"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存しますか？"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_output_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="はい"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_output_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="いいえ"
                android:textSize="24sp"
                app:backgroundTint="#FF3232" />
        </LinearLayout>

        <Button
            android:id="@+id/button_output_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="キャンセル"
            app:backgroundTint="#969696" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="~" />

        <Button
            android:id="@+id/button_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/button_tool"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="tool" />

        <Button
            android:id="@+id/button_layer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="layer" />

        <Button
            android:id="@+id/button_output"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="output" />
    </LinearLayout>

    <Button
        android:id="@+id/button_undo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="←"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_redo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/button_undo"
        android:layout_toRightOf="@+id/button_undo"
        android:gravity="center"
        android:text="→"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="×"
        android:textSize="24sp"
        android:visibility="invisible"
        app:backgroundTint="#FF2222" />

    <LinearLayout
        android:id="@+id/layout_reshape"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_reshape_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="OK"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_reshape_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="×"
                android:textSize="24sp"
                app:backgroundTint="#FF2222" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_expand"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="expand"
                app:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/button_slide"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:text="slide"
                app:backgroundTint="#49BEFF" />
        </LinearLayout>
