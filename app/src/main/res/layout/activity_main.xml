<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.y3033113.saishu.MyView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.y3033113.saishu.GhostView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="~" />

        <Button
            android:id="@+id/button_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/button_tool"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="tool" />

        <Button
            android:id="@+id/button_layer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="layer" />

        <Button
            android:id="@+id/button_output"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="output" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mode"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="-3dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/button_Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="~" />

        <Button
            android:id="@+id/button_fillRect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="■" />

        <Button
            android:id="@+id/button_Rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="□" />

        <Button
            android:id="@+id/button_fillOval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="●" />

        <Button
            android:id="@+id/button_Oval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="◯" />

        <Button
            android:id="@+id/button_clip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="c" />

        <Button
            android:id="@+id/button_clipreset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="r" />

        <Button
            android:id="@+id/button_eraser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="eraser" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/color"
        android:layout_width="248dp"
        android:layout_height="600dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginBottom="0dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:visibility="invisible">


        <com.example.y3033113.saishu.ColorView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="50dp" />

        <SeekBar
            android:id="@+id/seekBar_R"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressTint="#FF1111"
            android:thumbTint="#FF1111" />

        <TextView
            android:id="@+id/textView_R"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="R: 0"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <SeekBar
            android:id="@+id/seekBar_G"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressTint="#11FF11"
            android:thumbTint="#11FF11" />

        <TextView
            android:id="@+id/textView_G"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="G: "
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <SeekBar
            android:id="@+id/seekBar_B"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressTint="#1111FF"
            android:thumbTint="#1111FF" />

        <TextView
            android:id="@+id/textView_B"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="B: 0"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <SeekBar
            android:id="@+id/seekBar_alpha"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressTint="#DDDDDD"
            android:thumbTint="#DDDDDD" />

        <TextView
            android:id="@+id/textView_alpha"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="alpha: 255"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_red"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#FF0000" />

                <Button
                    android:id="@+id/button_green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#00FF00" />

                <Button
                    android:id="@+id/button_blue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#0000FF" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_cyan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#00FFFF" />

                <Button
                    android:id="@+id/button_magenta"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#FF00FF" />

                <Button
                    android:id="@+id/button_yellow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#FFFF00" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_black"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#000000" />

                <Button
                    android:id="@+id/button_white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    app:backgroundTint="#FFFFFF" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tool"
        android:layout_width="80dp"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="167dp"
        android:layout_marginLeft="167dp"
        android:layout_marginBottom="-2dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/button_ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ac" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="~" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="~" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="~" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layer"
        android:layout_width="248dp"
        android:layout_height="600dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginBottom="0dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/button_add_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="new" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/button_change_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="change" />

        <EditText
            android:id="@+id/et_index_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_index_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/button_exchange_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="exchange"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_currentLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="currentLayer: 1/1"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/output"
        android:layout_width="248dp"
        android:layout_height="600dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginBottom="0dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_redo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/button_undo"
        android:layout_toRightOf="@+id/button_undo"
        android:text="→"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_undo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="←"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="×"
        android:textSize="24sp"
        android:visibility="invisible"
        app:backgroundTint="#FF2222" />

</RelativeLayout>